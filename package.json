{
  "name": "typescript-cli-app-base",
  "version": "0.0.1",
  "description": "TypeScript cli app base repo",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/typescript-cli-app-base.git"
  },
  "scripts": {
    "build": "pack build",
    "lint": "tslint --project .",
    "start": "ts-node src/index.ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "version": "pack build"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.4.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-simple-bin": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-tslint-plugin": "^0.5.3",
    "uglify-js": "^3.6.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "cli-app"
        }
      ]
    ]
  },
  "dependencies": {}
}
